{% extends 'base.html.twig' %}

{% block body %}
    <style>

    </style>

    <div class="container-fluid">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <h2>Actualizar datos usuario</h2>
                {{ form_start(form, {'action':'', 'method':'POST', 'attr': {'class': ''}})}}
                <div>
                    <div>
                        {{ form_row(form.name, {'attr': {'class': 'form-control bg-warning'}}) }}
                    </div>
                    <div>
                        {{ form_row(form.apellidos, {'attr': {'class': 'form-control bg-warning'}}) }}
                    </div>
                    <div>
                        {{ form_row(form.fecha_nacimiento, {'attr': {'class': ''}}) }}
                    </div>
                    <div>
                        {{ form_row(form.nickname, {'attr': {'class': 'form-control bg-warning'}}) }}
                    </div>
                    <div>
                        {{ form_row(form.email, {'attr': {'class': 'form-control bg-warning'}}) }}
                    </div>
                    <div>
                        {{ form_row(form.password, {'attr': {'class': 'form-control bg-warning'}}) }}
                    </div>
                    <div>
                        {{ form_end(form)}}
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>

    </div>
{% endblock %}